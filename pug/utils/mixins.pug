mixin sectionNews(data={})
	section.section.news
		.container.news__container
			h2.news__title.section-title= data.title
			if data.linkText
				a(href="./page-news.html").news__readall.section-all.section-all--border= data.linkText
			.news__news
				if block
					block

mixin newsItem(data={})
	.news__item
		if data.image
			img.news__item-image(src=`@img/news/${data.image}`, alt=`${data.image}`)
			.news__item-content
				.news__item-body
					a(href="#").news__item-title= data.title
					p.news__item-text= data.text
				.news__item-info
					a(href="#").news__item-readmore.section-all.section-all--border Подробнее
